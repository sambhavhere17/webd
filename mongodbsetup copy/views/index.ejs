<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp mini</title>
  </head>
  <link rel="stylesheet" href="style.css">

    <h3>All chats!</h3>
    <form method="GET" action="/new">
        <button>New chat</button>

    </form>

    <% for(let chat of chats){ %>
    <div class="chat">
      <p>From: <%= chat.from %></p>
      <p>To: <%= chat.to %></p>
      <div class="message">
        <p>Message: <%= chat.message %></p>
        
      </div>
      <hr />
      <p> <%=chat.created_at.toString().split(" ")[4] %> <br/> </p>
      <p> <%=chat.created_at.toString().split(" ").slice(0,4).join(" ")%> <br/> </p>

    </div>
    <% } %>
  </body>
</html>
